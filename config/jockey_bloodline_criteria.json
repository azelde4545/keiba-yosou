      "min_offspring_sample": 50,
      "confidence_threshold": 0.7,
      "statistical_significance": 0.05
    },
    "distance_categories": {
      "sprint": {
        "range": [1000, 1400],
        "performance_threshold": 0.15
      },
      "mile": {
