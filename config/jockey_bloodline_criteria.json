      }
    },
    "track_conditions": {
      "good": {
        "weight": 1.0,
        "threshold": 0.12
      },
      "yielding": {
        "weight": 1.1,
        "threshold": 0.10
      },
      "soft": {
        "weight": 1.2,
        "threshold": 0.09
      },
      "heavy": {
        "weight": 1.3,
        "threshold": 0.08
      }
    },
    "surface_preferences": {
