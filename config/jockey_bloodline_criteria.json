      },
      "dirt": {
        "performance_threshold": 0.11,
        "grade_race_weight": 1.3
      }
    }
  },
  "data_sources": {
    "primary": "jra_official",
    "secondary": ["netkeiba", "jbis"],
    "update_frequency": "daily",
    "cache_duration": 86400
  },
  "quality_control": {
    "min_data_points": 30,
    "outlier_detection": true,
    "bias_correction": true,
    "cross_validation": true
  }
